<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login"
        android:layout_above="@+id/forget_forget"
        android:padding="30dp">

        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="30dp"
            android:stretchColumns="1">

            <TableRow android:layout_marginTop="20dp">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_text"
                    android:text="@string/login_item1" />

                <EditText
                    android:id="@+id/forget_name"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_text" />
            </TableRow>

            <TableRow android:layout_marginTop="20dp">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_text"
                    android:text="@string/login_item2" />

                <EditText
                    android:id="@+id/forget_passwork"
                    android:layout_marginLeft="10dp"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_text" />
            </TableRow>

            <TableRow android:layout_marginTop="20dp">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_text"
                    android:text="@string/register_item2" />

                <EditText
                    android:id="@+id/forget_phone"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:inputType="phone"
                    android:textSize="@dimen/login_text" />
            </TableRow>

            <TableRow android:layout_marginTop="20dp">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_text"
                    android:text="@string/register_item3" />

                <EditText
                    android:id="@+id/forget_email"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/login_text" />
            </TableRow>


        </TableLayout>
    </RelativeLayout>

    <com.dd.CircularProgressButton
        android:id="@+id/forget_forget"
        android:layout_width="196dp"
        android:layout_height="50dp"
        app:cpb_cornerRadius="48dp"
        app:cpb_paddingProgress="10dp"
        android:layout_marginBottom="80dp"
        android:textSize="@dimen/login_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        app:cpb_selectorIdle="@drawable/progressbutton_idle"
        app:cpb_selectorComplete="@drawable/progressbutton_complete"
        app:cpb_selectorError="@drawable/progressbutton_error"

        app:cpb_textComplete="@string/forget_item2"
        app:cpb_textError="@string/forget_item3"
        app:cpb_textIdle="@string/forget_item1" />
</RelativeLayout>
